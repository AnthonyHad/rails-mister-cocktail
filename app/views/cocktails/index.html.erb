
<div class="container">
<h1>Cocktails From the Future</h1>

<div class="cards">
  <% @cocktails.each do |cocktail| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://i.pinimg.com/originals/31/51/fa/3151fafbfd77f24a2bf0dba254b7e9fa.jpg)">
     <%= link_to cocktail.name, cocktail_path(cocktail), class: "text_cocktail"%>
    </div>
  <% end %>
</div>
</div>


<%= link_to "Add Cocktail", new_cocktail_path, class: "btn_add" %>


